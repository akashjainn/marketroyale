{
  "buildCommand": "pnpm -w run build:all",
  "outputDirectory": "dist",
  "functions": {
    "api/[...all].ts": {
      "includeFiles": "{dist/**,packages/api/dist/**,packages/shared/dist/**,packages/shared/package.json}"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...all]" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
