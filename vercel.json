{
  "buildCommand": "pnpm -w run build:all",
  "functions": {
    "api/[...all].ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/debug.ts": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/debug", "dest": "/api/debug.ts" },
    { "src": "/api/(.*)", "dest": "/api/[...all].ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
