{
  "buildCommand": "pnpm -w run build:all",
  "functions": {
    "api/**": {
      "runtime": "nodejs18.x",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/minimal", "dest": "/api/minimal.js" },
    { "src": "/api/debug", "dest": "/api/debug.ts" },
    { "src": "/api/(.*)", "dest": "/api/[...all].ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
